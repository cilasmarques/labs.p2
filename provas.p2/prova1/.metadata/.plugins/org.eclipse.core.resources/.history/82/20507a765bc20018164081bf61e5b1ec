		return true;
	}
	
	public void getInfo() {
	/*
	 * localização(posicao e setor) status	
	 */
	}
	
	public boolean getStatus(){
		if (ocupaVaga()) {
			return false;
		}
		return true;
	}
	
	public boolean setStatus() {
		return this.status;
	}
	
}
